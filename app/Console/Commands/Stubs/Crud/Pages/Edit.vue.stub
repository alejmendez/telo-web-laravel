<script setup>
import { useForm } from '@inertiajs/vue3';

import AuthenticatedLayout from '@Core/Layouts/AuthenticatedLayout.vue';
import HeaderCrud from '@Core/Components/Crud/HeaderCrud.vue';
import Form{{resource}} from '@{{module}}/Pages/{{resource_plural}}/Form.vue';

const props = defineProps({
  data: Object,
});

const { data } = props.data;

const form = useForm({
  _method: 'PATCH',
  id: data.id,
  name: data.name,
});

const submitHandler = () => form.post(route('{{resource_plural_lower}}.update', data.id));
</script>

<template>
  <AuthenticatedLayout :title="__('{{resource_lower}}.titles.entity_breadcrumb')">
    <HeaderCrud
      :title="__('{{resource_lower}}.titles.edit')"
      :breadcrumbs="[{ to: '{{resource_plural_lower}}.index', text: __('{{resource_lower}}.titles.entity_breadcrumb') }, { text: __('generics.actions.edit') }]"
      :form="{ instance: form, submitHandler, submitText: __('generics.buttons.save_edit'), hrefCancel: route('{{resource_plural_lower}}.index') }"
    />
    <Form{{resource}}
      :form="form"
      :submitHandler="submitHandler"
    />
